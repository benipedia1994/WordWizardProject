<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameSettingStatActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Settings"
        android:textSize="30sp"
        android:layout_gravity="center"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"

        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:text="Letter"
                android:textStyle="bold"
                android:layout_marginRight="4dp"
                android:paddingBottom="38dp"
                android:background="@drawable/rounded_border_orange"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Freq"
                android:textSize="22sp"
                android:paddingBottom="38dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/rounded_border_orange"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:layout_marginRight="4dp"
                android:background="@drawable/rounded_border_orange"
                android:text="Value"
                android:textStyle="bold"
                android:paddingBottom="38dp"
                />

        </TableRow>
    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/letterSettingStats">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:text="# Turns"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:id="@+id/turnsView"
            />
        </TableRow>
        </TableLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_border_red"
        android:text="Back"
        android:onClick="gameSettingToGameScore"
        />
</LinearLayout>